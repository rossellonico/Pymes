@model proyecto_1.Models.ViewModel.ProductoViewModel
@{
    ViewBag.Title = "Crear";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm("Crear", "Productos", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.AntiForgeryToken() //arroja excepcion no controlada


            @Html.ValidationMessage("error", new { @class = "text-danger" })



            @Html.LabelFor(d => d.descripcion)
            @Html.TextBoxFor(d => d.descripcion, new { @class = "form-control" })


            @Html.LabelFor(d => d.stock)
            @Html.TextBoxFor(d => d.stock, new { @class = "form-control" })


            @Html.LabelFor(d => d.precio)
            @Html.TextBoxFor(d => d.precio, new { @class = "form-control" })

            @Html.LabelFor(d => d.id_proveedor)
            @Html.DropDownListFor(d => d.id_proveedor, items, new { @class = "form-control" });



            <div style="text-align:right" class="boton">
                <input type="submit" class="btn btn-primary" value="Crear" />

            </div>

        }
    </div>

</div>





