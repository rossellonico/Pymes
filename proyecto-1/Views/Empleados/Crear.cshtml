@model proyecto_1.Models.ViewModel.EmpleadoViewModel

@{
    ViewBag.Title = "Crear";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
    List<SelectListItem> comercio = (List<SelectListItem>)ViewBag.comercio;
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">

        @using (Html.BeginForm("Crear", "Empleados", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.AntiForgeryToken() //arroja excepcion no controlada

            if ((int)Session["tipo"] != 3)
            {
                @Html.LabelFor(d => d.id_tipo)
                @Html.DropDownListFor(d => d.id_tipo, items, new { @class = "form-control" });

            }

            @Html.LabelFor(d => d.nombre)
            <br />@Html.ValidationMessageFor(d => d.nombre, "", new { @class = "text-danger" })
            @Html.TextBoxFor(d => d.nombre, new { @class = "form-control" })


            @Html.LabelFor(d => d.apellido)
            <br />@Html.ValidationMessageFor(d => d.apellido, "", new { @class = "text-danger" })
            @Html.TextBoxFor(d => d.apellido, new { @class = "form-control" })


            @Html.LabelFor(d => d.dni)
            <br />@Html.ValidationMessageFor(d => d.dni, "", new { @class = "text-danger" })
            @Html.TextBoxFor(d => d.dni, new { @class = "form-control" })


            if ((int)Session["tipo"] == 3)
            {
                @Html.LabelFor(d => d.comercio)
                @Html.DropDownListFor(d => d.comercio, comercio, new { @class = "form-control" });

            }

            <div style="text-align:right" class="boton">
                <input type="submit" class="btn btn-primary" value="Crear" />

            </div>

        }
    </div>

</div>
